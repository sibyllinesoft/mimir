{
  "dashboard": {
    "id": null,
    "title": "Mimir Error Analysis",
    "description": "Error tracking, failure analysis, and debugging dashboard",
    "tags": ["mimir", "errors", "debugging"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Overall Error Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(mimir_pipeline_executions_total{status=\"error\"}[5m]) / rate(mimir_pipeline_executions_total[5m]) * 100",
            "legendFormat": "Error Rate %",
            "datasource": {"type": "prometheus", "uid": "prometheus"}
          }
        ],
        "gridPos": {"x": 0, "y": 0, "w": 4, "h": 4},
        "options": {
          "reduceOptions": {"values": false, "calcs": ["lastNotNull"]},
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "background"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 5},
                {"color": "red", "value": 15}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Search Error Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(mimir_search_requests_total{status=\"error\"}[5m]) / rate(mimir_search_requests_total[5m]) * 100",
            "legendFormat": "Search Error Rate %",
            "datasource": {"type": "prometheus", "uid": "prometheus"}
          }
        ],
        "gridPos": {"x": 4, "y": 0, "w": 4, "h": 4},
        "options": {
          "reduceOptions": {"values": false, "calcs": ["lastNotNull"]},
          "colorMode": "background"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 2},
                {"color": "red", "value": 10}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Health Check Failures",
        "type": "stat",
        "targets": [
          {
            "expr": "mimir_health_checks_total{status=\"unhealthy\"}",
            "legendFormat": "Unhealthy Components",
            "datasource": {"type": "prometheus", "uid": "prometheus"}
          }
        ],
        "gridPos": {"x": 8, "y": 0, "w": 4, "h": 4},
        "options": {
          "reduceOptions": {"values": false, "calcs": ["lastNotNull"]},
          "colorMode": "background"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 3}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Error Trends by Type",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(mimir_pipeline_errors_total[5m])",
            "legendFormat": "{{stage}} - {{error_type}}",
            "datasource": {"type": "prometheus", "uid": "prometheus"}
          }
        ],
        "gridPos": {"x": 0, "y": 4, "w": 12, "h": 8},
        "options": {
          "legend": {"displayMode": "table", "placement": "bottom"},
          "tooltip": {"mode": "multi", "sort": "desc"}
        },
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "custom": {"drawStyle": "line", "lineInterpolation": "linear"}
          }
        }
      },
      {
        "id": 5,
        "title": "Pipeline Stage Failures",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(mimir_pipeline_executions_total{status=\"error\"}[5m])",
            "legendFormat": "{{stage}}",
            "datasource": {"type": "prometheus", "uid": "prometheus"}
          }
        ],
        "gridPos": {"x": 0, "y": 12, "w": 6, "h": 8},
        "options": {
          "legend": {"displayMode": "list", "placement": "bottom"}
        },
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "custom": {"drawStyle": "line", "lineInterpolation": "linear"}
          }
        }
      },
      {
        "id": 6,
        "title": "Search Error Distribution",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum by (search_type) (rate(mimir_search_requests_total{status=\"error\"}[5m]))",
            "legendFormat": "{{search_type}}",
            "datasource": {"type": "prometheus", "uid": "prometheus"}
          }
        ],
        "gridPos": {"x": 6, "y": 12, "w": 6, "h": 8},
        "options": {
          "reduceOptions": {"values": false, "calcs": ["lastNotNull"]},
          "pieType": "pie",
          "tooltip": {"mode": "single", "sort": "none"},
          "legend": {"displayMode": "visible", "placement": "bottom"}
        }
      },
      {
        "id": 7,
        "title": "Memory Usage Alerts",
        "type": "graph",
        "targets": [
          {
            "expr": "mimir_memory_usage_bytes{type=\"rss\"} / 1024 / 1024 / 1024",
            "legendFormat": "RSS Memory (GB)",
            "datasource": {"type": "prometheus", "uid": "prometheus"}
          }
        ],
        "gridPos": {"x": 0, "y": 20, "w": 6, "h": 8},
        "alert": {
          "conditions": [
            {
              "evaluator": {"params": [8], "type": "gt"},
              "operator": {"type": "and"},
              "query": {"model": "A", "params": ["5m", "now"]},
              "reducer": {"params": [], "type": "avg"},
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "for": "5m",
          "frequency": "10s",
          "handler": 1,
          "name": "High Memory Usage",
          "noDataState": "no_data",
          "notifications": []
        },
        "fieldConfig": {
          "defaults": {
            "unit": "decbytes",
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 6},
                {"color": "red", "value": 8}
              ]
            },
            "custom": {"drawStyle": "line", "lineInterpolation": "linear"}
          }
        }
      },
      {
        "id": 8,
        "title": "Recent Error Messages",
        "type": "logs",
        "targets": [
          {
            "expr": "{job=\"mimir\"} |= \"ERROR\"",
            "datasource": {"type": "loki", "uid": "loki"}
          }
        ],
        "gridPos": {"x": 6, "y": 20, "w": 6, "h": 8},
        "options": {
          "showTime": true,
          "showLabels": false,
          "showCommonLabels": false,
          "wrapLogMessage": true,
          "sortOrder": "Descending"
        }
      },
      {
        "id": 9,
        "title": "Error Rate Heatmap",
        "type": "heatmap",
        "targets": [
          {
            "expr": "increase(mimir_pipeline_errors_total[1m])",
            "legendFormat": "{{stage}}-{{error_type}}",
            "datasource": {"type": "prometheus", "uid": "prometheus"}
          }
        ],
        "gridPos": {"x": 0, "y": 28, "w": 12, "h": 8},
        "options": {
          "calculate": true,
          "yAxis": {"unit": "short"},
          "color": {"mode": "spectrum", "scheme": "Spectral"}
        }
      }
    ],
    "time": {"from": "now-6h", "to": "now"},
    "timepicker": {},
    "templating": {"list": []},
    "annotations": {"list": []},
    "refresh": "30s",
    "schemaVersion": 30,
    "style": "dark",
    "version": 1,
    "weekStart": ""
  },
  "overwrite": true
}